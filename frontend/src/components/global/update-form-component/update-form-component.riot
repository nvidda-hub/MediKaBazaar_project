<form-component>
    <h2>Edit this product</h2>
    <div class="row">
        <form class="form-group" id="product_form">
            <div class="container flex flex-col">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="product_name" style="font-weight: 500; margin-right:15px;">Product Name</label>
                        <input type="text"  name="product_name" class="form-control" placeholder="Enter Product Name" id="product_name" value={props.item.product_name}>
                    </div>
                </div>

                <div class="col-md-6" style="margin-top:15px; margin-bottom:15px;">
                    <div class="form-group">
                        <label for="quantity" style="font-weight: 500; margin-right:68px;">Quantity</label>
                        <input type="number"  name="quantity" class="form-control" placeholder="How Many you have" id="quantity" value={props.item.quantity}>  
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                     <label for="price" style="font-weight: 500; margin-right:98px;">Price</label>
                        <input type="number"  name="price" class="form-control" placeholder="Enter Product Price" id="price" value={props.item.price}>
                    </div>
                </div>
            
                <div class="col-md-6">
                    <button id="addProductBtn" onclick={handleSubmit}>
                        Submit
                    </button>
                </div>

            </div>
        </form>
    </div>
    
    <script>

        export default {
            handleSubmit(event){
                event.preventDefault()
                const { product_name, quantity, price } = document.forms[0].elements;
                const formResult = [ product_name.value, quantity.value, price.value]

                if (this.props.action === "update"){
                    this.props.handleUpdate(formResult)
                }
            }
        }
  </script>

</form-component>